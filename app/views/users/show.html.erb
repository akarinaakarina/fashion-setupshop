
<% breadcrumb :user, @user %>

<div class='shoppage-contents'>
    <h2 class='shop-name'>
      <%= @user.shop_name %>
    </h2>
    <%# <p class='service-explain'>
      誰でもお店のオーナーになれます
    </p>
    <p class='service-explain'>
      そしてお気に入りのお店を見つけましょう
    </p> %>
</div>
<div class="profile-contents">
  <div class="profile-title-content">
    <h2 class='profile-title'>プロフィール</h2>
  </div>
  <div class="profile-content">
    <div class='user-lists'>
      <%= image_tag @user.image, class: "user-edit-img" %>
      <div class="user-edit-name"><%= @user.nickname%></div>
    </div>
    <div class="user-description">
      <%= @user.description %>
    </div>
  </div>
  <% if user_signed_in? && current_user.id == @user.id %>
    <div class="user-edit">
      <%= link_to "プロフィール編集", edit_user_path, method: :get, class: "user-brack-btn" %>
    </div>
  <% end %>
</div>

<% if @user.original_items.where(state_id: 2).present? %>
<div class='item-contents'>
  <h2 class='title'>オリジナルアイテム</h2>
  <ul class='item-lists'>
  <% @user.original_items.where(state_id: 2).each do |original_item|%>
    <li class='list'>
      <%= link_to original_item_path(original_item.id) do %>
        <div class='item-img-content'>
          <%= image_tag original_item.image, class: "item-img" %>
          <% if original_item.buy.present? %>
            <div class='sold-out'>
              <span>Sold Out!!</span>
            </div>
          <% end %>
        </div>
        <div class='item-info'>
          <h3 class='item-name'>
            <%= original_item.name %>
          </h3>
            <div class='item-price-star'>
               <span>¥<%= original_item.price %></span>
               <div>
                 <span class='star-count'>
                   ★<%= original_item.liked_users.count %>
                 </span>
                </div>
             </div>
        </div>
      <% end %>
    </li>
  <% end %>
  </ul>
</div>
<% end %>
